{
  "name": "instagram-ts-clone",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/rimraf",
      "**/expo",
      "**/expo/**",
      "**/rimraf/**"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "heroku-postbuild": "yarn run build:server",
    "build:server": "lerna run build --scope={@airbnb/server}",
    "build:web": "lerna run build --scope={@airbnb/common,@airbnb/web}"
  }
}
